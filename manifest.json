{
        "name": "Googkey",
        "version": "0.2",
        "description": "Search google for the selected text with a shortcut.",
        "icons": {
                "16": "image/icon16.png",
                "48": "image/icon48.png",
                "128": "image/icon128.png"
        },
        "permissions": [
                "tabs",
                "http://*/",
                "https://*/"
        ],
        "background": {
                "persistent": false,
                "scripts": [
                        "background.js"
                ]
        },
        "commands": {
                "google-search": {
                        "suggested_key": {
                                "default": "Alt+G"
                        },
                        "description": "Toggle google search"
                }
        },
        "manifest_version": 2
}
